{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "web-build",
        "buildCommand": "npx expo install && npx expo build:web"
      }
    }
  ],
  "routes": [
    {
      "src": "^/static/(.*)",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" },
      "dest": "/static/$1"
    },
    {
      "src": "^/(.+\\.[a-zA-Z]+)$",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" },
      "dest": "/$1"
    },
    {
      "src": "^/.*",
      "headers": { "cache-control": "no-cache, no-store, must-revalidate" },
      "dest": "/index.html"
    }
  ]
}